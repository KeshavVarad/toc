extends layout.pug

block appContent
    script setActive('home')

    .break
    
    .container
        .row
            .col-12.text-center 
                h2 US Data
        each country in us
            .row
                .col.text-center.border 
                    h5 Positive
                .col.text-center.border #{country.positive}
            .row
                .col.text-center.border 
                    h5 Negative
                .col.text-center.border #{country.negative}
            .row
                .col.text-center.border 
                    h5 Reported Deaths
                .col.text-center.border #{country.death}
            .row
                .col.text-center.border 
                    h5 Recovered
                .col.text-center.border #{country.recovered}

    .container
        .row
            .col-12.text-center
                h2 States Data
        .row
            .col.text-center.border 
                h5 State
            .col.text-center.border 
                h5 Positive
            .col.text-center.border 
                h5 Negative
            .col.text-center.border 
                h5 Reported Deaths
            .col.text-center.border 
                h5 Recovered
        each state in states
            .row
                .col.text-center.border #{state.state}
                
                if state.positive == null
                    .col.text-center.border NO DATA
                else
                    .col.text-center.border #{state.positive}
                
                if state.negative == null
                    .col.text-center.border NO DATA
                else
                    .col.text-center.border #{state.negative}

                if state.death == null
                    .col.text-center.border NO DATA
                else
                    .col.text-center.border #{state.death}
                
                if state.recovered == null
                    .col.text-center.border NO DATA
                else
                    .col.text-center.border #{state.recovered}

                

    .break

    .container
        .row
            .col-12.text-center
                h1.heading_text About
        .row
            .col-12.text-center
                p.
                    Times of Corona is a website made to inform people about the corona virus
                    and any updates about it. It provides news updates and a spread map that
                    tells people how much of an area has the corona virus. It is important to
                    stay safe during the corona virus by staying at home andwashing your hands
                    as much as possible. This is very important!
        .text-center
            img.img-fluid(src="/images/coronavirus_safety.jpg" width="50%" height="auto")
    